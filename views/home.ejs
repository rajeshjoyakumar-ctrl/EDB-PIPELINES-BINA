<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Equipment Dashboard</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Equipment Dashboard</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <span class="nav-link">ðŸ‘‹ <%= user.email %></span>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout" id="logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Container -->
  <div class="container text-center" style="margin-top: 100px;">
    <h1 class="my-4">Welcome <%= user.email %></h1>
    <div class="row g-3 justify-content-center">
      <div class="col-12 col-md-4">
        <a class="btn btn-lg btn-outline-primary w-100" href="/equipment/mechanical.json">
          Mechanical Equipment
        </a>
      </div>
      <div class="col-12 col-md-4">
        <a class="btn btn-lg btn-outline-success w-100" href="/data/mechnical.json">
          Electrical Equipment
        </a>
      </div>
      <div class="col-12 col-md-4">
        <a class="btn btn-lg btn-outline-warning w-100" href="mechanical.ejs">
          Instrument Equipment
        </a>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Logout handler (optional, if API exists)
    document.getElementById('logout').addEventListener('click', async function(e) {
      e.preventDefault();
      await fetch('/api/logout', { method: 'POST' });
      window.location = '/login';
    });
  </script>
</body>
</html>
