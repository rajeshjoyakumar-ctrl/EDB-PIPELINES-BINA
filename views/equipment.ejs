<!DOCTYPE html>
<html>
<head>
    <title><%= type %> Equipment</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1><%= type %> Equipment</h1>

    <table>
        <tr>
            <th>Name</th>
            <th>Specs</th>
            <th>Location</th>
        </tr>
        <% data.forEach(item => { %>
        <tr>
            <td>
                <a href="/equipment/<%= type.toLowerCase() %>/<%= encodeURIComponent(item.Name) %>">
                    <%= item.Name %>
                </a>
            </td>
            <td><%= item.Specs %></td>
            <td><%= item.Location %></td>
        </tr>
        <% }) %>
    </table>

    <div class="container">
        <a href="/home">â¬… Back</a>
    </div>
</body>
</html>
