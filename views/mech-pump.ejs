      <tr><th>TYPE</th><td>DMF-SPK7-M</td></tr>
      <tr><th>CAPACITY</th><td>730 m³/Hr</td></tr>
      <tr><th>SPEED</th><td>2985 min⁻¹</td></tr>
      <tr><th>SUCTION PRESSURE TRIP</th><td>2.0 kg/cm²</td></tr>
      <tr><th>DISCHARGE PRESSURE TRIP</th><td>92.5 kg/cm²</td></tr>
      <tr><th>HEAD</th><td>1070 M</td></tr>
      <tr><th>STAGE</th><td>7</td></tr>
      <tr><th>SIZE</th><td>250 × 200</td></tr>
      <tr><th>DESIGN PRESSURE</th><td>136 kg/cm²</td></tr>
